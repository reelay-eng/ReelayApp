{
  "expo": {
    "name": "Reelay",
    "slug": "ReelayApp",
    "version": "1.0.41",
    "orientation": "portrait",
    "icon": "./assets/icons/reelay-icon.png",
    "scheme": "reelayapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/reelay-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps",
          "config": {
            "organization": "reelay-inc",
            "project": "reelay-inc",
            "authToken": "ee5540bac8794172bba8e8041cc31e06eba7cf549653470c96669188f8552005"
          }
        }
      ]
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ReelayiOS",
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.anthonyreelay.ReelayApp"
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "sentry-expo",
      [
			"expo-image-picker",
			{
				"photosPermission": "Reelay accesses your photos to help you personalize your posts and profile."
			}
		]
    ]
  }
}
